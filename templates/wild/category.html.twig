{% extends "base.html.twig" %}


{% block body %}
    <section class="container" id="wild_category">
        <h1>Les trois dernières séries de la catégorie {{ programs.0.category.name }} : </h1>
        {% for program in programs %}
            <div>
                <h2>{{ program.id }} / {{ program.title }}</h2>
                <p>{{ program.summary }}</p>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}
        <a href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
    </section>
{% endblock %}
