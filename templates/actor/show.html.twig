{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ actor.birthDate }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ actor.image }}</td>
            </tr>
        </tbody>
    </table>

    <strong>Programs :</strong>
    <ul>
        {% for program in actor.programs %}
            <li>{{ program.title }} <a href="{{ path('program_show', {'id': program.id }) }}">+</a></li>
        {% endfor %}
    </ul>

    <a href="{{ path('actor_index') }}">back to list</a>

    <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
